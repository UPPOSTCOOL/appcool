<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="edu.eci.pdsw.samples.dao.mybatis.mappers.ProgramaMapper">
    <resultMap type='Programa' id='ProgramaResult'>
        <id property='id' column='id'/>
        <result property='nombre' column='nombre'/>
        <collection property='asignaturas' ofType='Asignatura' resultMap='edu.eci.pdsw.samples.dao.mybatis.mappers.AsignaturaMapper.AsignaturaResult' columnPrefix='asignatura_'></collection>
    </resultMap>
    <select parameterType="map" id="consultarProgramas" resultMap="ProgramaResult">
        select
            P.id,
            P.nombre,
            
            A.id as asignatura_id,
            A.nombre as asignatura_nombre
        from 
            Programa P,
            Asignatura A
        WHERE
            A.programaId=P.id
        Order By P.nombre asc;
    </select>
</mapper>